@model PiggyCoins_dev.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}


<!-- Menu Section -->
<section id="menu" class="menu section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Collection</h2>
        <p><span>Start your savings adventure with our vast collection of </span> <span class="description-title">piggy banks!</span></p>
    </div><!-- End Section Title -->

    <div class="container">

       

        <div class="tab-content" data-aos="fade-up" data-aos-delay="200">

            <div class="tab-pane fade active show" id="menu-starters">

             

                <div class="row gy-5">

                    @foreach (var categoryName in Model.CategoryNames)
                    {

                        <div class="col-lg-4 menu-item">
                            <a href="assets/img/menu/menu-item-3.png" class="glightbox"><img src="assets/img/tirelire1.jpg" style="width: 50%; border-radius:50%;" class="menu-img img-fluid" alt=""></a>
                            <h4>@categoryName</h4>
                            
                        </div><!-- Menu Item -->

                    }

                </div>
            </div><!-- End Starter Menu Content -->


        </div>

    </div>

</section><!-- /Menu Section -->
